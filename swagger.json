      "AllTasksRequest": {
        "type": "object",
        "required": ["date"],
        "properties": {
          "date": {
            "type": "string",
            "description": "Date to filter tasks",
            "example": "2023-10-15",
            "pattern": "^(202[3-9]|20[3-9][0-9])-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])$"
          }
        }
      },
      "AllTasksResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "description": "Id this task",
              "example": "task_id-1"
            },
            "title": {
              "type": "string",
              "description": "Title for task",
              "maxLength": 250,
              "example": "Do homework"
            },
            "start": {
              "type": "string",
              "description": "Start of task",
              "example": "09:00"
            },
            "end": {
              "type": "string",
              "description": "End of task",
              "example": "12:00"
            },
            "priority": {
              "type": "string",
              "description": "Priority of task",
              "enum": ["low", "medium", "high"],
              "example": "high"
            },
            "date": {
              "type": "string",
              "description": "Date of adding task",
              "example": "2023-10-15"
            },
            "category": {
              "type": "string",
              "description": "Category of task",
              "enum": ["to-do", "in-progress", "done"],
              "example": "to-do"
            },
            "owner": {
              "type": "string",
