            "type": "string",
            "description": "User's name",
            "example": "Nadiia Moe"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email",
            "example": "nadiia.moe.12@mail.com",
            "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "nadiiamoe_password123"
          }
        }
      },
